            <form>
                <input type="email" class="email text-uppercase" id="exampleInputEmail1" aria-describedby="emailHelp"
                       placeholder="Enter your email">
                <button type="submit" class="button-subscribe text-uppercase">subscribe</button>
            </form>
        </div>
    </section>
</main>
{% endblock %}
