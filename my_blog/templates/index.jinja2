                    <a href="contact.html" class="main-button">Let’s work together</a>
                </div>
            </div>
        </div>
        <div class="black-div"></div>
    </section>

    <section id="contact" class="social-media">
        <div class="container">
            <h2>WANT TO KNOW MORE ABOUT US?</h2>

            <a href=""><img src="{{ url_for('static', path='img/facebook_icon.svg') }}" alt=""></a>
            <a href=""><img src="{{ url_for('static', path='img/instagram logo_icon.svg') }}" alt=""></a>
            <a href=""><img src="{{ url_for('static', path='img/pinterest_icon.svg') }}" alt=""></a>
        </div>
    </section>
    <section class="new-articles">
        <div class="card-group">
            {% for post in popular if post.is_active %}
            <div class="card bg-dark text-white">
                <img src="{{ url_for('media', path=post.image) }}" class="card-img" alt="...">
                <div class="card-img-overlay p-3">
                    <div class="text-overlay">
                        <p class="card-text text-uppercase">Most Popular</p>
                        <h5 class="card-title text-uppercase">{{post.title}} </h5>
                        <div class="line"></div>
                        <div class="card-text autor-data d-flex pb-3">
                            <p class="post-autor text-uppercase"> {{post.owner.username}}</p>
                            <p class="post-data text-uppercase">| {{post.create_date}}</p>
                        </div>
                        <a href="/blog/single/{{ post.uid }}" class="card-button">Read article</a>
                    </div>
                </div>
            </div>
            {% endfor %}
    </section>
    <section id="posts" class="recent-posts">
        <div class="container">
            <h2 class="underscore">RECENT POSTS</h2>
            <p class="sup-header">Lorem ipsum dolor sit amet consectetur adipisicing elit. Deserunt perspiciatis ex
                ipsam similique blanditiis. Culpa hic quia, repellendus corrupti </p>
            <div class="posts-wrapper">
                {% for post in recent %}
                <div class="post-item">
                    <div class="post-meta">
                        <span>
                            <i class="far fa-user"></i>
                            {{post.owner.username}}
                        </span>
                        <span>
                            <i class="far fa-calendar"></i> 
                            {{post.create_date}}
                        </span>
                    </div>
                    <a href="/blog/single/{{ post.uid }}" class="post-title">
                        {{post.title}}
                    </a>
                    <p class="post-content">{{post.content}}</p>
                    <div class="post-meta">
                        <span>
                            <i class="far fa-comment-alt"></i>
                            {{post.comment|length}} comments
                        </span>
                    </div>
                </div>
                {% endfor %}
                <a href="/blog" class="main-button">View all posts</a>
            </div>
        </div>
    </section>
    <section id="subscribe" class="subscribe">
        <div class="container">
            <h2>Subscribe & Don’t Miss Out</h2>
            <p class="">Lorem ipsum dolor sit amet consectetur adipisicing elit. Deserunt perspiciatis ex ipsam
                similique blanditiis. Culpa hic quia, repellendus corrupti perspiciatis praesentium
